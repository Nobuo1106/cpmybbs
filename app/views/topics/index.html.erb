


<div class="text-center bg-light font-weight-normal pt-3">
<%= link_to "Chatty", '#', id: "logo" %>

  <p>国際結婚についての掲示板です</p>
</div>
<p>スレッド一覧</p>
<ul>
  <% @topics.each do |topic| %>
    <li>
      <%= link_to topic.title, topics_show_path(topic.id) %>
      <%= link_to '[削除]', topic_delete_path(topic.id), method: :delete, data: {confirm: "削除してもよろしいですか？"} %>
    </li>
  <% end %>
</ul>

<div class="bg-success text-light">
<h4>トピック新規登録</h4>
<%= form_for @newTopic, :url => {:action => 'create'} do |f| %>
  <%= f.text_field :title %>
  <%= f.submit %>
<% end %>
</div>

 <%= render 'layouts/shim' %>

<%= render 'layouts/footer' %>

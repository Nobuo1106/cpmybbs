<div class="text-center pb-20 mt-10">
<h3><%= @topic.title %></h3>
</div>
<div class="mt-20 pd-20">
<% @posts.each_with_index do |post , idx| %>
  <p>
    <%= idx + 1 %>. <%= post.name %> : <%= post.body %>
  </p>
<% end %>
</div>
<div class="newpost my-auto pb-30">
<h4>新規書き込み</h4>
<%= form_for @newpost, :url => post_create_path do |f| %>
</div>

<div class="post_area">
  <p>お名前</p>
  <p><%= f.text_field :name %></p>
  <p>本文</p>
  <p><%= f.text_area :body %></p>
  <%= f.hidden_field :topic_id %>
  <%= f.submit %>
<% end %>
</div>

<div class="back-btn back-btn-primary">
<button onclick="history.back()">戻る</button>
<% link_to "戻る", :back %>
</div>
